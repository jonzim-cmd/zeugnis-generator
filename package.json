{
  "name": "zeugnis-generator",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://jonzim-cmd.github.io/zeugnis-generator",
  "dependencies": {
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.0",
    "docxtemplater": "^3.22.3",
    "file-saver": "^2.0.5",
    "pizzip": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "gh-pages": "^5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "mkdir -p ~/.ssh && echo \"$SSH_PRIVATE_KEY_TEMPLATE\" > ~/.ssh/id_ed25519_template && chmod 600 ~/.ssh/id_ed25519_template",
    "build": "GIT_SSH_COMMAND='ssh -i ~/.ssh/id_ed25519_template -o StrictHostKeyChecking=no' react-scripts build",
    "postbuild": "rm -rf docs && mkdir -p docs && cp -r build/* docs/ && touch docs/.nojekyll",
    "deploy": "git stash push --include-untracked || true && npm run build && git add docs && git commit -m \"Update docs folder\" && git pull --rebase --autostash && git push && git stash pop || true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
